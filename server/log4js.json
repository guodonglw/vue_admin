{
    "appenders": [
        {
            "type": "logLevelFilter",
            "level": "INFO",
            "appender": {
                "type": "file",
                "filename": "./logs/app.log",
                "pattern": "-yyyy-MM-dd",
                "maxLogSize": 10485760,
                "numBackups": 5
            }
        },
        {
            "type": "logLevelFilter",
            "level": "ERROR",
            "appender": {
                "type": "file",
                "filename": "./logs/errors.log"
            }
        }
    ],
    "replaceConsole": true
}